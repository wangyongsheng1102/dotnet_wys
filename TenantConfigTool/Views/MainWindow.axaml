<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TenantConfigTool.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="TenantConfigTool.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="租户配置生成工具"
        Width="1000" Height="700"
        WindowStartupLocation="CenterScreen"
        FontFamily="avares://TenantConfigTool/Assets/LXGWWenKai-Light.ttf#霞鹜文楷 Light">

    <!-- ================= 全局样式 ================= -->
    <Window.Styles>

        <!-- 基础文本 -->
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <!-- <Setter Property="FontFamily" Value="avares://TenantConfigTool/Assets/LXGWWenKai-Light.ttf#霞鹜文楷 Light"></Setter> -->
        </Style>

        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <!-- <Setter Property="FontFamily" Value="avares://TenantConfigTool/Assets/LXGWWenKai-Bold.ttf#霞鹜文楷"></Setter> -->
        </Style>

        <!-- 输入框 -->
        <Style Selector="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <!-- <Setter Property="FontFamily" Value="avares://TenantConfigTool/Assets/LXGWWenKai-Light.ttf#霞鹜文楷 Light"></Setter> -->
        </Style>

        <!-- 按钮 -->
        <Style Selector="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <!-- <Setter Property="FontFamily" Value="avares://TenantConfigTool/Assets/LXGWWenKai-Light.ttf#霞鹜文楷 Light"></Setter> -->
        </Style>

        <!-- 主按钮 -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <!-- <Setter Property="FontFamily" Value="avares://TenantConfigTool/Assets/LXGWWenKai-Bold.ttf#霞鹜文楷"></Setter> -->
        </Style>

        <!-- ListBox -->
        <Style Selector="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="4"/>
            <!-- <Setter Property="FontFamily" Value="avares://TenantConfigTool/Assets/LXGWWenKai-Light.ttf#霞鹜文楷 Light"></Setter> -->
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="#EEF4FF"/>
        </Style>

        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#DCE9FF"/>
        </Style>

    </Window.Styles>

    <!-- ================= 布局 ================= -->
    <Grid Background="#F3F4F6"
          RowDefinitions="Auto,*,Auto"
          ColumnDefinitions="*,*"
          Margin="12">

        <!-- ========= 输入区 ========= -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Background="White"
                CornerRadius="12"
                Padding="14"
                BoxShadow="0 2 8 #22000000">

            <StackPanel>

                <TextBlock Text="输入参数" Classes="header"/>

                <Grid ColumnDefinitions="Auto,*,Auto"
                      RowDefinitions="Auto,Auto,Auto,Auto"
                      Margin="0,4,0,6">

                    <TextBlock Text="基础项目路径:" Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,10,6"/>
                    <TextBox Text="{Binding BaseProjectPath}" Grid.Row="0" Grid.Column="1" Margin="0,0,6,6"
                             VerticalContentAlignment="Center"/>
                    <Button Content="浏览..."
                            Command="{Binding BrowseBaseProjectPathCommand}"
                            Grid.Row="0" Grid.Column="2" Margin="0,0,0,6"/>

                    <TextBlock Text="目标项目路径:" Grid.Row="1" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,10,6"/>
                    <TextBox Text="{Binding TargetProjectPath}" Grid.Row="1" Grid.Column="1" Margin="0,0,6,6"
                             VerticalContentAlignment="Center"/>
                    <Button Content="浏览..."
                            Command="{Binding BrowseTargetProjectPathCommand}"
                            Grid.Row="1" Grid.Column="2" Margin="0,0,0,6"/>

                    <TextBlock Text="基础租户代码:" Grid.Row="2" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,10,6"/>
                    <TextBox Text="{Binding BaseTenantCode}"
                             Grid.Row="2" Grid.Column="1"
                             Margin="0,0,0,6"
                             VerticalContentAlignment="Center"/>
                    <TextBox Text="{Binding BaseTenantName}"
                             Grid.Row="2" Grid.Column="2"
                             Margin="10,0,0,6"
                             VerticalContentAlignment="Center"/>

                    <TextBlock Text="新租户代码:" Grid.Row="3" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding NewTenantCode}"
                             Grid.Row="3" Grid.Column="1"
                             VerticalContentAlignment="Center"/>
                    <TextBox Text="{Binding NewTenantName}"
                             Grid.Row="3" Grid.Column="2"
                             Margin="10,0,0,6"
                             VerticalContentAlignment="Center"/>
                </Grid>

                <CheckBox Content="覆盖已存在的文件"
                          IsChecked="{Binding OverwriteExisting}"
                          Margin="0,4,0,8"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="8">

                    <Button Content="预览"
                            Command="{Binding PreviewCommand}"
                            IsEnabled="{Binding !IsProcessing}"/>

                    <Button Content="生成"
                            Classes="primary"
                            Command="{Binding GenerateCommand}"
                            IsEnabled="{Binding !IsProcessing}"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- ========= 文件列表 ========= -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="White"
                CornerRadius="12"
                Padding="12"
                Margin="0,10,6,0"
                BoxShadow="0 2 8 #22000000">

            <StackPanel>

                <TextBlock Text="文件列表" Classes="header"/>

                <ListBox ItemsSource="{Binding FileMappings}"
                         SelectedItem="{Binding SelectedMapping}">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="2">
                                <TextBlock Text="{Binding RelativePath}"/>
                                <TextBlock Text="{Binding TargetPath}"
                                           FontSize="11"
                                           Foreground="Gray"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>

            </StackPanel>
        </Border>

        <!-- ========= 日志 ========= -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="White"
                CornerRadius="12"
                Padding="12"
                Margin="6,10,0,0"
                BoxShadow="0 2 8 #22000000">

            <StackPanel>

                <TextBlock Text="日志" Classes="header"/>

                <ListBox ItemsSource="{Binding LogMessages}">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       FontSize="12"
                                       Foreground="#333"
                                       TextWrapping="Wrap"
                                       Margin="2"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>

            </StackPanel>
        </Border>

        <!-- ========= 状态栏 ========= -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Background="White"
                CornerRadius="10"
                Padding="8,6"
                Margin="0,10,0,0"
                BorderBrush="#D1D5DB"
                BorderThickness="1">

            <TextBlock>
                <Run Text="状态："/>
                <Run Text="{Binding StatusText}"/>
            </TextBlock>

        </Border>

    </Grid>

</Window>